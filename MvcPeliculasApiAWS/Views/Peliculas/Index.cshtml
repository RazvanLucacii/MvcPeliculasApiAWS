@model IEnumerable<MvcPeliculasApiAWS.Models.Pelicula>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create Pelicula</a>
</p>

<p>
    <a asp-controller="Peliculas"
       asp-action="PeliculasActor">Buscar películas</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPelicula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YouTube)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPelicula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                <img src="~/images/@item.Foto" style="width:200px; height:200px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)€ 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YouTube)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IdPelicula }, new { @class = "btn btn-warning"}) |
                    @Html.ActionLink("Details", "Details", new { id=item.IdPelicula}, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.IdPelicula }, new { @class = "btn btn-danger" })
            </td>
        </tr>
}
    </tbody>
</table>
